@model AppAutos.Models.Vehiculo

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid text-center">
    <div class="row">
        <div class="col p-0 pb-2 border-bottom">
            <h1 class="font-weight-bold h1 mb-5">Agregar Vehículo</h1>
        </div>
    </div>
</div>

<div class="bg-white text-body">

    <div class="container py-5">
        <form asp-action="Create" class="row">
            <div class="col-md-4 mx-auto">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Modelo" class="control-label font-weight-bold"></label>
                    <input asp-for="Modelo" class="form-control" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Precio" class="control-label font-weight-bold"></label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Anio" class="control-label font-weight-bold"></label>
                    <input asp-for="Anio" class="form-control" />
                    <span asp-validation-for="Anio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Puertas" class="control-label font-weight-bold"></label>
                    <input asp-for="Puertas" class="form-control" />
                    <span asp-validation-for="Puertas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Potencia" class="control-label font-weight-bold"></label>
                    <input asp-for="Potencia" class="form-control" />
                    <span asp-validation-for="Potencia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Kilometros" class="control-label font-weight-bold"></label>
                    <input asp-for="Kilometros" class="form-control" />
                    <span asp-validation-for="Kilometros" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MarcaId" class="control-label font-weight-bold"></label>
                    <select asp-for="MarcaId" class="form-control" asp-items="ViewBag.MarcaId"></select>
                </div>
            </div>

            <div class="col-md-4 mx-auto">
                <div class="form-group">
                    <label asp-for="TipoId" class="control-label font-weight-bold"></label>
                    <select asp-for="TipoId" class="form-control" asp-items="ViewBag.TipoId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ColorId" class="control-label font-weight-bold"></label>
                    <select asp-for="ColorId" class="form-control" asp-items="ViewBag.ColorId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="CombustibleId" class="control-label font-weight-bold"></label>
                    <select asp-for="CombustibleId" class="form-control" asp-items="ViewBag.CombustibleId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="PaisId" class="control-label font-weight-bold"></label>
                    <select asp-for="PaisId" class="form-control" asp-items="ViewBag.PaisId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="SeguroId" class="control-label font-weight-bold"></label>
                    <select asp-for="SeguroId" class="form-control" asp-items="ViewBag.SeguroId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="EstadoId" class="control-label font-weight-bold"></label>
                    <select asp-for="EstadoId" class="form-control" asp-items="ViewBag.EstadoId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Agregar Vehículo" class="btn bg-darkblue text-white mt-4" />
                </div>
            </div>
        </form>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
